<%= form_for inquiry do |f| %>
	<% if inquiry.errors.any? %>
		<ul>
			<% inquiry.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="well">
		<div style="display:none;">
			<%= f.label :nickname %><br/>
			<%= f.text_field :nickname %>
		</div>

		<div class="form-group">
			<%= f.label :name %><br/>
			<%= f.text_field :name, :class => "form-control input-lg", :placeholder => "Your Name" %>
		</div>

		<div class="form-group">
			<%= f.label :email %><br/>
			<%= f.text_field :email, :class => "form-control input-lg", :placeholder => "Your Email" %>
		</div>

		<div class="form-group">
			<%= f.label :message %><br/>
			<%= f.text_area :message, :class => "form-control input-lg", :placeholder => "Please type your message" %>
		</div>

		<div>
			<%= f.submit "Send", :class => "btn btn-success btn-lg" %>
		</div>
	</div>
<% end %>